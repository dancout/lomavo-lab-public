# Immich configuration
# See https://docs.immich.app/install/environment-variables

# Storage locations (Windows paths)
# Note: UPLOAD_LOCATION is no longer used - we use a Docker CIFS volume (nas-immich) instead
# UPLOAD_LOCATION=D:\Server_Data\Docker\immich\library  # Legacy - before NAS migration
DB_DATA_LOCATION=C:\Server_Data\Docker\immich\postgres

# Immich version - pin to specific version or use 'release' for latest
IMMICH_VERSION=v2

# Database credentials
DB_PASSWORD=
DB_USERNAME=postgres
DB_DATABASE_NAME=immich

# NAS credentials for Docker CIFS volume
# These are used when creating the nas-immich Docker volume
# See gaming-pc/immich-nas-migration-plan.md for volume creation command
NAS_USERNAME=
NAS_PASSWORD=

# Raspberry Pi IP (used by watchtower for Uptime Kuma notifications)
RPI_IP=

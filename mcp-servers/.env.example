# MCP Servers Configuration
# Copy to .env and fill in actual values

# MCP Authentication (optional — if set, all /mcp endpoints require Bearer token)
MCP_API_KEY=

# Machine IPs
RPI_IP=
GAMING_PC_IP=
NAS_IP=

# Monitoring service endpoints (all on NAS)
PROMETHEUS_URL=http://<NAS_IP>:9090
GRAFANA_URL=http://<NAS_IP>:3030
LOKI_URL=http://<NAS_IP>:3100

# Immich (on Gaming PC)
IMMICH_URL=http://<GAMING_PC_IP>:2283
IMMICH_API_KEY=

# Pi-hole v6 (primary on Pi, secondary on NAS)
PIHOLE_PRIMARY_URL=http://<RPI_IP>:8088
PIHOLE_SECONDARY_URL=http://<NAS_IP>:8089
PIHOLE_PRIMARY_PASSWORD=
PIHOLE_SECONDARY_PASSWORD=

# SSH (for mcp-docker remote commands)
RPI_USER=
NAS_USER=
SSH_KEY_PATH=/ssh/id_rsa

# Paperless-ngx (for mcp-documents — ADR-033)
PAPERLESS_TOKEN=

# Qdrant (for mcp-documents — ADR-033)
QDRANT_API_KEY=

# Ollama (for mcp-documents embeddings)
MACBOOK_IP=

# Reranker (optional — cross-encoder reranking via Infinity on MacBook)
RERANKER_URL=http://<MACBOOK_IP>:7997
RERANKER_MODEL=BAAI/bge-reranker-v2-m3

# Docker volume paths (for mcp-homelab repo mount and mcp-docker SSH keys)
REPO_PATH=
SSH_KEY_DIR=

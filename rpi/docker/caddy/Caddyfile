home.{$DOMAIN} {
	tls {
		dns cloudflare {$CLOUDFLARE_API_TOKEN}
	}
	reverse_proxy localhost:3000
}

vault.{$DOMAIN} {
	tls {
		dns cloudflare {$CLOUDFLARE_API_TOKEN}
	}
	reverse_proxy https://localhost:8080 {
		transport http {
			tls_insecure_skip_verify
		}
	}
}

